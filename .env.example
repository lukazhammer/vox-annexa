# Base44 Configuration
VITE_BASE44_APP_ID=your_app_id_here
VITE_BASE44_APP_BASE_URL=https://your-app.base44.app
VITE_BASE44_FUNCTIONS_VERSION=

# Gemini API (required for AI functions)
GEMINI_API_KEY=your_gemini_api_key

# Vercel KV (optional - enables persistent caching across function cold starts)
# Without these, functions will fall back to in-memory caching
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token

# App URL (used for resume links in saveProgress)
APP_URL=https://annexa.vox-animus.com

# Stripe EDGE plan (one-time checkout)
STRIPE_EDGE_PRICE_ID=price_xxx
STRIPE_EDGE_AMOUNT_USD=19
STRIPE_EDGE_CHECKOUT_MODE=payment
